<div id="newPortfolio">
    <h2>Edit Portfolio</h2>
    <form method="POST" action="/profile/updatePortfolio?_method=PUT">
        <div class="form-group">
            <label> Portfolio Name: </label>
            <input type="text" name="portfolioName" class="form-control" value='<%= portfolio.portfolioName %>'/>
        </div>
        <div class="form-group">
            <label>Post Publicly?</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="isPublic" value='true' id="flexRadioDefault1" checked>
                <label class="form-check-label" for="flexRadioDefault1">
                Yes
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="isPublic" value='false' id="flexRadioDefault2">
                <label class="form-check-label" for="flexRadioDefault2">
                No
                </label>
            </div>
        </div>
        <br>
        <div id="allAssets">
            <% portfolio.assets.forEach(asset=>{ %>
            <div class="asset">
                <div class="form-group">
                    <label> Asset Ticker: </label>
                    <input type="text" name="assetName" value='<%= asset.assetName %>' class="form-control" />
                </div>
                <div class="form-group">
                    <label> Type of Asset: </label>
                    <select name="typeOfAsset" class="custom-select custom-select-sm">
                        <!-- Note that the values here are 1 digit so that the length function works in our controller -->
                        <!-- if you change the below, you must change in static java as well -->
                        <option value="S" <% if(asset.typeOfAsset=='S') {%> selected<% } %>>US Stocks</option>
                        <option value="C" <% if(asset.typeOfAsset=='C') {%> selected<% } %>>Crypto Currency</option>
                    </select>
                </div>
                <div class="form-group">
                    <label> Price Obtained: </label>
                    <input type="number" name="priceObtained" value='<%= asset.priceObtained %>'class="form-control" min=0/>
                </div>
                <div class="form-group">
                    <label> Quantity Owned: </label>
                    <input type="number" name="qtyOwned" value='<%= asset.qtyOwned %>' class="form-control" min=0/>
                </div>
                <input type="hidden" name="assetId" value="<%= asset.id %>">        
            </div>
            <% }) %>
        </div>
        <br>
        <button type="button" id="newAsset">+ Add</button>
        <br>
        <br>
        <input type="hidden" name="id" value="<%= portfolio.id %>">
        <div>
            <input type="submit" class="btn btn-primary"></input>
        </div>
    </form>
    <div id="deletePortfolio">
        <label id="deletePortfolioLabel">Delete This Portfolio</label>
        <br>
        <a class="deletePortfolio" href="/profile/deletePortfolioKeepGains?id=<%= portfolio.id %>">Delete & Keep Gains</a>  
        <a class="deletePortfolio" href="/profile/deletePortfolioRemoveGains?id=<%= portfolio.id %>">Delete & Remove Gains</a>
    </div>
</div>