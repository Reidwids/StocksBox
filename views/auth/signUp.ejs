<h1>Create a new account</h1>

<form method="POST" action="/auth/signUp" enctype="multipart/form-data">
  <div class="form-group">
    <label> First Name: </label>
    <input type="text" name="firstName" class="form-control" />
  </div>

  <div class="form-group">
    <label> Last Name: </label>
    <input type="text" name="lastName" class="form-control" />
  </div>

  <div class="form-group">
    <label> Email Address: </label>
    <input type="email" name="emailAddress" class="form-control" />
  </div>

  <div class="form-group">
    <label> Password: </label>
    <input type="password" name="password" class="form-control" />
  </div>

  <div class="form-group">
    <label> Preferred Currency: </label>
    <select name="preferredCurrency" class="custom-select custom-select-sm">
      <option value="CAD" selected>Canadian (CAD)</option>
      <option value="USD">United States Dollar (USD)</option>
  </select>
  </div>
  <br>

  <div>
    <label for="image">Upload Image</label>
    <br>
    <input type="file" id="image" name="image">
  </div>

  <br>

  <div>
    <input type="submit" class="btn btn-primary">Sign Up</input>
  </div>
</form>
